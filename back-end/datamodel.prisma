enum Permission {
  ADMIN
  USER
}

type Address {
  id: ID! @unique
  street1: String!
  street2: String
  city: String!
  postcode: Int!
  country: String!
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  phone: String
  billingAddress: Address @relation(name: "UserBillingAddress")
  shippingAddress: [Address!] @relation(name: "UserShippingAddresses")
  paymentId: String
  avatar: String
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Subscription {
  id: ID! @unique
  title: String!
  shortDescription: String!
  longDescription: String!
  totalPrice: Int!
  mealPrice: Int!
  thumbnailImage: String
  largeImage: String
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Order {
  id: ID! @unique
  user: User!
  subscriptions: [Subscription!]!
  billingAddress: Address! @relation(name: "OrderBillingAddress")
  shippingAddress: Address! @relation(name: "OrderShippingAddress")
  deliveryTime: String!
  deliveryDayOfWeek: String!
  paymentDate: DateTime!
  createdAt: DateTime!
  updatedAt: DateTime!
}
